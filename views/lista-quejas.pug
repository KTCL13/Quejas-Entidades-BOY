doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Consulta de Quejas
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-4
      // Selector de entidad
      .mb-3
        label.form-label(for="entidad") Entidad Pública
        select.form-select#entidad(name="entidad")
          option(value="") Seleccione una entidad...
          each entidad in entidades
            option(value=entidad.id) #{entidad.nombre_entidad}


      // Tabla de quejas
      table.table.table-bordered
        thead.table-secondary
          tr
            th Quejas
        tbody
          if quejas.length
            each queja in quejas
              tr
                td #{queja.descripcion_queja}
          else
            tr
              td.text-center(colspan="1") No hay quejas registradas

      // Paginación
      nav.mt-3
        ul.pagination
          li.page-item
            a.page-link(href="#") ← Previous
          each page in paginas
            li.page-item(class= page === paginaActual ? 'active' : '')
              a.page-link(href=`?page=${page}`) #{page}
          li.page-item
            a.page-link(href="#") Next →

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
