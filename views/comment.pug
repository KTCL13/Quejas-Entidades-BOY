doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Detalle Queja
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")

  body.bg-light
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#") Quejas Entidades Públicas de Boyacá
        .collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href="#") Listado de quejas
            li.nav-item
              a.nav-link(href="#") Registrar Queja
            li.nav-item
              a.nav-link(href="#") Número de quejas por entidad

    // Contenido
    .container.my-4
      .card.shadow
        .card-body
          // Encabezado
          h5.card-title Queja ##{complaint.id} realizada a "#{complaint.entities}"
          .d-flex.justify-content-between.align-items-center.mb-3
            span
              strong Estado:
              |  #{complaint.state}
            button.btn.btn-outline-dark.btn-sm Cambiar estado

          // Texto de la queja (usa description en lugar de texto)
          .mb-4
            label.form-label.fw-bold(for="textoQueja") Texto de la queja
            textarea#textoQueja.form-control(rows="4" readonly)= complaint.description

          // Comentarios
          h6.fw-bold Comentarios
          .list-group.mb-3
            each comment in complaint.comments
              .list-group-item.d-flex.justify-content-between
                span= comment.description
                small.text-muted Fecha: #{comment.date}

          // Agregar comentario
          .input-group
            input.form-control(type="text" placeholder="Escribe un comentario...")
            button.btn.btn-primary(type="button") Agregar comentario

      // Nota
      p.text-danger.mt-3
        strong Caso 1.2.1:
        |  Se desea agregar un comentario a la queja

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
